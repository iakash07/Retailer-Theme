<!--=================== Login Template ===================-->
<main class="login-page {% if section.settings.header_top_check == blank and section.settings.welcome_message_notify_check == blank %}paira-sticky-root{% endif %}">
    <section class="login-content paira-gap-3 paira-gap-2">
        <div class="container">
            <div class="row">
                <div id="login">
                    <div class="col-md-12 text-center">
                        <div class="heading pull-left full-width">
                            <h1 class="page-header margin-bottom-30 text-left pull-left"><span>{{ 'customer.login.title' | t }}</span></h1>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="login-back">
                                    {% form 'customer_login' %}
                                    {{ form.errors | default_errors }}
                                    <label>{{ 'customer.login.email' | t }}</label>
                                    <input type="email" value="" name="customer[email]" class="form-control margin-bottom-10" id="customer_email" />
                                    {% if form.password_needed %}
                                    <label>{{ 'customer.login.password' | t }}</label>
                                    <input type="password" value="" name="customer[password]" class="form-control margin-bottom-10" id="customer_password" size="16" />
                                    <button type="submit" class="btn btn-default pull-left margin-top-10">{{ 'customer.login.title' | t }}</button>
                                    <a href="#" class="pull-right margin-top-20 undreline" onclick="showRecoverPasswordForm();return false;"><h5 class="margin-clear">{{ 'customer.login.forgot_password' | t }}</h5></a>
                                    {% endif %}
                                    {% endform %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="recover-password" style="display:none">
                    <div class="col-md-12 text-center">
                        <div class="heading pull-left full-width">
                            <h1 class="page-header margin-bottom-30 text-left pull-left"><span>{{ 'customer.recover_password.title' | t }}</span></h1>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="login-back">
                                    <h5 class="margin-top-20">{{ 'customer.recover_password.subtext' | t }}</h5>
                                    {{ form.errors | default_errors }}
                                    {% form 'recover_customer_password' %}
                                    <input type="email" placeholder="{{ 'footer.newsletter.email_address' | t }}" value="" size="30" name="email" id="recover-email" class="form-control margin-bottom-10" />
                                    <button type="submit" class="btn btn-default pull-left margin-top-10">{{ 'customer.recover_password.reset' | t }}</button>
                                    <button onclick="hideRecoverPasswordForm();return false;" class="pull-right cancel-btn margin-top-20"><i class="fa fa-times" aria-hidden="true"></i> <span>{{ 'customer.recover_password.cancel' | t }}</span></button>
                                    {% endform %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="login" class="col-md-6 text-center login-register">
                    <div class="login-back">
                        <h4 class="margin-bottom-20 margin-top-0">{{ 'general.modal_dialog_box.new_customer' | t }}</h4>
                        <a href="/account/register" class="btn btn-primary">{{ 'general.modal_dialog_box.create_an_account' | t }}</a>
                    </div>
                </div>
                {% if shop.checkout.guest_login %}
                <div id="guest" class="col-md-12 paira-gap-2">
                    <div class="row">
                        <div class="col-md-5">
                            {% form 'guest_login' %}
                            <input class="btn btn-primary pull-left margin-top-10 btn-lg btn-block" type="submit" value="{{ 'customer.login.guest_continue' | t }}" />
                            {% endform %}
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </section>
</main>
<script type="text/javascript">
    function showRecoverPasswordForm() {
        document.getElementById('recover-password').style.display = 'block';
        document.getElementById('login').style.display='none';
    }
    function hideRecoverPasswordForm() {
        document.getElementById('recover-password').style.display = 'none';
        document.getElementById('login').style.display = 'block';
    }
    if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>
