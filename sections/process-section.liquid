<section>
  <div class="process_section">
    <div class="ctm-container">
      <div class="process_title">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
      </div>
      <div class="process_col">
        <div class="process_flex">
          {% for block in section.blocks %}
            <div class="process_icon">
              <div class="icon_box">
                {% if block.settings.icon != blank %}
                  <span>{{ block.settings.icon }}</span>
                {% endif %}
                {% if block.settings.text != blank %}
                  <h4>{{ block.settings.text }}</h4>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Process Section",
  "settings": [
    {
      "type":"text",
      "id":"heading",
      "label":"Add Heading"
    }
  ],
  "blocks":[
    {
      "type":"icon_block",
      "name":"Icon Block",
      "settings":[
        {
          "type":"html",
          "id":"icon",
          "label":"Add Icon"
        },
        {
          "type":"text",
          "id":"text",
          "label":"Add Process Title"
        }
      ]
    }
  ],
  "presets":[
    {
      "name":"Process Section"
    }
  ]
}
{% endschema %}
