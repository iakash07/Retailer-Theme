<!--=================== Image Banner ===================-->
<section class="banner-small {% if section.settings.ban_section_gap_check %} paira-gap-2 {% endif %} paira-animation-container" id="slidersection--{{ section.id }}">
    <div class="container-fluid padding-fixed {% if section.settings.ban_full_width_check %}full-width{% endif %}">
        <div class="row {% if section.settings.ban_full_width_check %}margin-clear{% endif %}">
            {% if section.blocks == blank %}
            <div class="col-md-4 col-sm-6 col-xs-6">
                <div class="position-r banner-image-small overflow-h">
                    <a href="#" class="pull-left margin-right-10 full-width">
                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg full-width banner-images' }}
                    </a>
                    <div class="display-table-blog-11">
                        <div class="display-table-cell-blog  display-table-cell-blog-2">
                            <a href="#" class="back-link"></a>
                            <div class="image-text  pull-right text-right margin-top-40">
                                <h2 class="margin-top-0 margin-bottom-5">WOMAN STYLE</h2>
                                <p>All new products 30% off</p>
                                <a href="#" class="btn btn-default">GET THIS NOW</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-6">
                <div class="position-r banner-image-small overflow-h">
                    <a href="#" class="pull-left margin-right-10 full-width">
                        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg banner-images full-width' }}
                    </a>
                    <div class="display-table-blog-11">
                        <div class="display-table-cell-blog  display-table-cell-blog-2">
                            <a href="#" class="back-link"></a>
                            <div class="image-text  text-center margin-top-40">
                                <h2 class="margin-top-0 margin-bottom-5">BLACK SALE</h2>
                                <p>10% off All new products</p>
                                <a href="#" class="btn btn-default"> DISCOVER MORE</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-6">
                <div class="position-r banner-image-small overflow-h">
                    <a href="#" class="pull-left margin-right-10 full-width">
                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg banner-images full-width' }}
                    </a>
                    <div class="display-table-blog-11">
                        <div class="display-table-cell-blog  display-table-cell-blog-2">
                            <a href="#" class="back-link"></a>
                            <div class="image-text  pull-right text-right margin-top-40">
                                <h2 class="margin-top-0 margin-bottom-5">SUMMER SALE</h2>
                                <p>All new products 30% discount</p>
                                <a href="#" class="btn btn-default">SHOP NOW</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% for block in section.blocks %}
            <div class="{% if section.settings.banner_row == '3' %}col-lg-4 {% cycle '', '', '', 'margin-top-30', 'margin-top-30', 'margin-top-30' %}{% endif %}{% if section.settings.banner_row == '2' %}col-lg-6 {% cycle '', '', 'margin-top-30', 'margin-top-30' %}{% endif %} col-sm-4 col-xs-6 col-md-4 banes-{{ block.id }}">
                {% if block.type != 'video' %}
                <div class="position-r banner-image-small banner-image-small-{{ block.id }} overflow-h">
                    <a href="{{block.settings.small_banner_link_1}}" class="pull-left margin-right-10 full-width">
                        {% if block.settings.image == blank %}
                        {{ 'lifestyle-1' | append: current | placeholder_svg_tag: 'placeholder-svg banner-images full-width' }}
                        {% else %}
                        <img src="{{ block.settings.image | img_url: 'master' }}" class="img-responsive banner-images">
                        {% endif %}
{% if block.settings.home_slider_overlay %}
<div class="overlay" style="background: {{ block.settings.overlay_bg_color | color_modify: 'alpha', 0.5 }};position: absolute;height: 100%;width: 100%;top: 0;left: 0;"></div>
                                                                                                                                                                            {% endif %}
                    </a>
                      {% if section.settings.banner_style == '3' %}
                        {% if block.settings.banner_content %}
                      <div class="display-table-blog-11 display-table-blog-11-{{ block.id }}">
                      <div class="display-table-cell-blog  display-table-cell-blog-2">
                        <div class="image-text image-text-3 pull-left full-width {% if block.settings.banner_content_position == '1' %} pull-left text-left{% elsif block.settings.banner_content_position == '2' %} pull-right text-right {% else %} text-center{% endif %}">
                        <h2 class="margin-top-0 margin-bottom-5">{{ block.settings.image_heading }}</h2>
                         {{ block.settings.image_text }}
                        <a href="{{ block.settings.small_btn_link }}" class="btn btn-default"> {{ block.settings.image_text_btn }}</a>
                        </div>
                        </div>
                        </div>                                                                                                         {% endif %}
                        {% endif %}
                    {% if section.settings.banner_style == '1' %}
                    {% if block.settings.banner_content %}
                    <div class="display-table-blog-11 display-table-blog-11-{{ block.id }}">
                        <div class="display-table-cell-blog">
                            <a href="{{ block.settings.small_btn_link }}" class="back-link"></a>
                            <div class="image-text {% if block.settings.banner_content_position == '1' %} pull-left text-left{% elsif block.settings.banner_content_position == '2' %} pull-right text-right {% else %} text-center{% endif %}">
                                <h2 class="margin-top-0 margin-bottom-5">{{ block.settings.image_heading }}</h2>
                                {{ block.settings.image_text }}
                                <a href="{{ block.settings.small_btn_link }}" class="btn btn-default"> {{ block.settings.image_text_btn }}</a>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    {% endif %}
                </div>
                {% if section.settings.banner_style == '2' %}
                {% if block.settings.banner_content %}
                <div class="image-text pull-left full-width margin-top-10 {% if block.settings.banner_content_position == '1' %} pull-left text-left{% elsif block.settings.banner_content_position == '2' %} pull-right text-right {% else %} text-center{% endif %}">
                    <h2 class="margin-top-0 margin-bottom-5">{{ block.settings.image_heading }}</h2>
                    {{ block.settings.image_text }}
                    <a href="{{ block.settings.small_btn_link }}" class="btn btn-default"> {{ block.settings.image_text_btn }}</a>
                </div>
                {% endif %}
                {% endif %}
                {% endif %}
                {% if block.type == 'video' and block.settings.video_url != blank %}
                <div class="videos video-{{ block.id }}"></div>
                <script>
                    {% if block.settings.video_url.type == 'vimeo' %}
                    {% assign video_type = 'https://player.vimeo.com/video/' %}
                    {% else %}
                    {% assign video_type = 'https://www.youtube.com/embed/' %}
                    {% endif %}
                    $(function() {
                        $(".video-{{ block.id }}").html('<iframe src="{{ video_type }}{{ block.settings.video_url.id }}?VQ=HD720&autoplay=0&loop=1&autopause=0&showinfo=0&controls=0&title=false&portrait=false&byline=false" width="100" height="300" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>');
                    });
                </script>
                {% endif %}
            </div>
              <script>
              $(window).load(function() {
                var ban_heighter = $(".banner-image-small-{{ block.id }} .banner-images").height();
                $(".banner-small iframe").height(ban_heighter);
                $(".display-table-blog-11-{{ block.id }}").height(ban_heighter);
            });
            </script>
            {% endfor %}
        </div>
    </div>
</section>
<style>
    {% for block in section.blocks %}
    {% if section.blocks == blank %}
    .banner-small .videos {
        min-height: 362px !important;
    }
    {% endif %}
    .banes-{{ block.id }} .image-text p{
    font-size: {{ block.settings.image_texts_size }}px;
    color: {{ block.settings.image_para_color }};
    }
    .banes-{{ block.id }} .image-text h2{
    font-size: {{ block.settings.image_head_size }}px;
    color: {{ block.settings.image_text_color }};
    }
    .banes-{{ block.id }} .image-text .btn {
    color: {{ block.settings.image_button_color }};
    background-color: {{ block.settings.image_button_bg_color }};
    border-color: {{ block.settings.image_button_border_color }};
    }
    .banes-{{ block.id }} .btn-default.active, .banes-{{ block.id }} .btn-default.focus, .banes-{{ block.id }} .btn-default:active, .banes-{{ block.id }} .btn-default:focus, .banes-{{ block.id }} .btn-default:hover {
    color: {{ block.settings.h_image_button_color }};
    background-color: {{ block.settings.h_image_button_bg_color }};
    border-color: {{ block.settings.h_image_button_border_color }};
    }
    .banner-small .image-text-3 {
    background: {{ block.settings.overlay_bg_color | color_modify: 'alpha', 0.8 }};
    }
    {% endfor %}
</style>
{% schema %}
{
"name": "Grid Banner(Image,Video)",
"max_blocks": 3,
"settings": [
{
"type": "header",
"content": "Section Gap"
},
{
"type": "checkbox",
"id": "ban_section_gap_check",
"label": "Enable Section Gap",
"default": true
},
{
"type": "header",
"content": "Section Full Width"
},
{
"type": "checkbox",
"id": "ban_full_width_check",
"label": "Enable Section Full Width",
"default": true
},
{
"type": "header",
"content": "Banner Content"
},
{
"type": "select",
"id": "banner_row",
"label": "Banner per row",
"options": [
{
"value": "2",
"label": "2"
},
{
"value": "3",
"label": "3"
}
],
"default": "3"
},
{
"type": "header",
"content": "Banner Style"
},
{
"type": "select",
"id": "banner_style",
"label": "Banner Style",
"options": [
{
"value": "1",
"label": "Style 1"
},
{
"value": "2",
"label": "Style 2"
},
{
"value": "3",
"label": "Style 3"
}
],
"default": "1"
}
],
"blocks": [
{
"type": "image",
"name": "Banner Image",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info": "Upload image : 594 x 355px recommended."
},
{
"type": "url",
"id": "small_banner_link_1",
"label": "Small banner link",
"default": "\/collections\/all"
},
{
"type": "checkbox",
"id": "banner_content",
"label": "Enable Banner Content",
"default": true
},
{
"type": "select",
"id": "banner_content_position",
"label": "Banner Content Alignment",
"options": [
{
"value": "1",
"label": "Content Left"
},
{
"value": "2",
"label": "Content Right"
},
{
"value": "3",
"label": "Content Center"
}
]
},
{
"type": "text",
"id": "image_heading",
"label": "Heading",
"default": "WOMAN STYLE"
},
{
"type": "range",
"id": "image_head_size",
"label": "Heading Font Size",
"min": 12,
"max": 50,
"default": 26
},
{
"type": "color",
"id": "image_text_color",
"label": "Select Heading Text Color",
"default": "#000"
},
{
"type": "richtext",
"id": "image_text",
"label": "Paragraph",
"default": "<p>All new products 30% off</p>"
},
{
"type": "range",
"id": "image_texts_size",
"label": "Paragraph Font Size",
"min": 12,
"max": 18,
"default": 14
},
{
"type": "color",
"id": "image_para_color",
"label": "Select Paragraph Text Color",
"default": "#000"
},
{
"type": "text",
"id": "image_text_btn",
"label": "Button Text",
"default": "DISCOVER MORE"
},
{
"type": "url",
"id": "small_btn_link",
"label": "Small banner Button Link",
"default": "\/collections\/all"
},
{
"type": "header",
"content": "Button Color"
},
{
"type": "color",
"id": "image_button_color",
"label": "Text Color",
"default": "#fff"
},
{
"type": "color",
"id": "image_button_bg_color",
"label": "Background Color",
"default": "#262626"
},
{
"type": "color",
"id": "image_button_border_color",
"label": "Border Color",
"default": "#262626"
},
{
"type": "header",
"content": "Button Hover Color"
},
{
"type": "color",
"id": "h_image_button_color",
"label": "Text Color",
"default": "#fff"
},
{
"type": "color",
"id": "h_image_button_bg_color",
"label": "Background Color",
"default": "#F26522"
},
{
"type": "color",
"id": "h_image_button_border_color",
"label": "Border Color",
"default": "#F26522"
},
{
"type": "checkbox",
"id": "home_slider_overlay",
"label": "Enable Image Overlay",
"default": false
},
{
"type": "color",
"id": "overlay_bg_color",
"label": "Overlay Color",
"default": "#fff"
}
]
},
{
"type": "video",
"name": "Banner Video",
"settings": [
{
"type": "video_url",
"id": "video_url",
"info": "Ex. Link: https://www.youtube.com/watch?v=_9VUPq3SxOc",
"label": "Video link",
"accept": ["youtube", "vimeo"],
"default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
}
]
}
],
"presets": [
{
"name": "Grid Banner(Image,Video)",
"category": "Banner"
}
]
}
{% endschema %}
