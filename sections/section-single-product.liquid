                                <div class="vendor-type-sku">
                                    {% if section.settings.product_vendor_check %}
                                    <div class="pull-left margin-top-0 margin-right-20">
                                        <label class="pull-left margin-right-10 margin-bottom-0">{{ 'products.template.vendor' | t }}:</label>
                                        <p class="pull-left margin-clear"><a href="/collections/vendors?q={{ product.vendor }}">{{ product.vendor }}</a></p>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
