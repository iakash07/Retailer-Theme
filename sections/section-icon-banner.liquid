"label": "Heading Font Size",
"min": 12,
"max": 30,
"default": 13
},
{
"type": "color",
"id": "top_foo_para_color",
"label": "Paragraph Color",
"default": "#565656"
},
{
"type": "range",
"id": "image_texts_size",
"label": "Paragraph Font Size",
"min": 12,
"max": 16,
"default": 14
}
],
"blocks": [
{
"type": "image",
"name": "Image & Text",
"settings": [
{
"type": "image_picker",
"id": "footer_icon",
"label": "Image",
"info": "Upload image : 55 x 40px recommended."
},
{
"type": "textarea",
"id": "Icon_text",
"label": "Heading",
"default": "FREE SHIPPING & RETURN"
},
{
"type": "textarea",
"id": "Icon_para",
"label": "Paragraph",
"default": "Free shipping on all US orders"
}
]
}
],
"presets": [
{
"name": "Icon Banner",
"category": "Banner",
"blocks": [
{
"type": "image"
},
{
"type": "image"
},
{
"type": "image"
},
{
"type": "image"
}
]
}
]
}
{% endschema %}
