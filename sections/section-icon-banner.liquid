"name": "Icon Banner",
"max_blocks": 4,
"settings": [
{
"type": "text",
"id": "title",
"label": "Add Title"
},
{
"type": "textarea",
"id": "desc",
"label": "Add Description"
},
{
"type": "header",
"content": "Section Gap"
