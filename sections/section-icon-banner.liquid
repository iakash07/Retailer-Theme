},
{
"type": "header",
"content": "Section Full Width"
},
{
"type": "checkbox",
"id": "ban_full_width_check",
"label": "Enable Section Full Width",
"default": false
},
{
"type": "header",
"content": "Banner Content"
},
{
"type": "select",
"id": "banner_row",
"label": "Banner per row",
"options": [
{
"value": "3",
"label": "3"
},
{
"value": "4",
"label": "4"
}
],
"default": "4"
},
{
"type": "header",
"content": "Icon Banner Color & Font Size"
},
{
"type": "color",
"id": "top_foo_text_color",
"label": "Heading Color",
"default": "#000"
},
{
"type": "range",
