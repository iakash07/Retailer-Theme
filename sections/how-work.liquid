<div class="how-its-work">
  <div class="ctm-container">
    {% if section.settings.img1 != blank %}
    <div class="about-1 mb-40">
      <img src="{{ section.settings.img1 | img_url: "master" }}" class="d-only w-100">
      <img src="{{ section.settings.img2 | img_url: "master" }}" class="m-only w-100">
    </div>
    {% endif %}
    
    {% if section.settings.img3 != blank %}
    <div class="about-1 mb-40">
      <img src="{{ section.settings.img3 | img_url: "master" }}" class="d-only w-100">
      <img src="{{ section.settings.img4 | img_url: "master" }}" class="m-only w-100">
    </div>
    {% endif %}
    
  </div>
</div>
