      },
      {
        "type": "image_picker",
        "id": "img2",
        "label": "Add Mobile Image"
      },
      {
        "type": "image_picker",
        "id": "img3",
        "label": "Add Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "img4",
        "label": "Add Mobile Image"
      }
    ],
