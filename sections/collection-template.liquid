                    <div class="filter-product paira-filter-product">
                        {% if section.settings.collection_all_page_check %}
                        <div class="panel-group margin-clear collection-widget-list" id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="filter">
                                <h2 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#filter_1" aria-expanded="true" aria-controls="filter_1">
                                        {{ section.settings.collection_product_all_title }}
                                    </a>
                                </h2>
                            </div>
                            <div id="filter_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="filter">
                                <div class="panel-body">
                                    <ul class="list-unstyled margin-clear">
                                        {% if collections.length > 0 %}
                                        {% assign collect_handel = collection.handle %}
                                        {% for collection in collections limit: section.settings.collection_product_all_limit %}
                                        <li><a href="{{ collection.url }}" class="paira-filter-category {% if collect_handel == collection.handle %} active {% endif %}">{{ collection.title }}</a></li>
                                        {% endfor %}
                                        {% else %}
                                        <p>Your Collection List Is Empty!</p>
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        </div>
                        {% endif %}
                        {% if section.settings.shop_by_color_check %}
                        <div class="panel-group margin-clear" id="accordion1" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="color">
                                <h2 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion1" href="#color_1" aria-expanded="true" aria-controls="color_1">
                                        {{ section.settings.shop_by_color_title }}
                                    </a>
                                </h2>
                            </div>
                            <div id="color_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="color">
                                <div class="panel-body colors-temp">
                                    <ul class="list-inline margin-clear">
                                        {% assign tags = section.settings.shop_by_color | split: ',' %}
                                        {% for t in tags %}
                                        {% assign tag = t | strip %}
                                        {% if current_tags contains tag %}
                                        <span><label style="background:  {{ tag | downcase }}"><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"></label></span>
                                        {% elsif collection.all_tags contains tag %}
                                        <span><label style="background:  {{ tag | downcase }}"><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"></label></span>
                                        {% elsif collection.handle == 'all' %}
                                        <span><label style="background:  {{ tag | downcase }}"><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"></label></span>
                                        {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        </div>
                        {% endif %}
