<!--=================== Collection Template ===================-->
<main id="collectionsection--{{ section.id }}" class="collection-page collection-template {% if section.settings.header_top_check == blank and section.settings.welcome_message_notify_check == blank %}paira-sticky-root{% endif %}" data-section-id="{{ section.id }}" data-section-type="collection-template">
    <!--=================== Collections Product Section ===================-->
    <section class="collection-content paira-gap-2">
            <div class="container-fluid padding-clear">
                {% if section.settings.collection_image_con_1 %}
                <a href="{{section.settings.collection_image_link_1}}" class="display-in-b full-width">
                    {% if section.settings.collection_image_1 == blank %}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg full-width height-300' }}
                    {% else %}
                    <img src="{{ section.settings.collection_image_1 | img_url: 'master' }}" class="img-responsive banner-images">
                    {% endif %}
                </a>
                {% endif %}
            </div>
            <div class="container-fluid padding-fixed">
                <div class="row">
                    <aside id="sidebar" class="sidebar col-md-3 col-lg-3 col-sm-12 col-xs-12 paira-gap-3"{% if section.settings.collect_layout == '1' %} style="float: left;"{% endif %}{% if section.settings.collect_layout == '2' %} style="float: right;"{% endif %}{% if section.settings.collect_layout == '3' %} style="display:none;"{% endif %}>
