                    {% endif %}
                    {% if section.settings.collection_image_con %}
                    <a href="{{section.settings.collection_image_link}}" class="display-in-b margin-bottom-0">
                        {% if section.settings.collection_image == blank %}
                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg height-300 full-width' }}
                        {% else %}
                        <img src="{{ section.settings.collection_image | img_url: 'master' }}" class="img-responsive banner-images">
                        {% endif %}
                    </a>
                    {% endif %}
