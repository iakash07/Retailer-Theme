                        {% if section.settings.shop_by_weight_check %}
                        <div class="panel-group margin-clear" id="accordion8" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="weight">
                                <h2 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion8" href="#weight_1" aria-expanded="true" aria-controls="weight_1">
                                        {{ section.settings.shop_by_weight_title }}
