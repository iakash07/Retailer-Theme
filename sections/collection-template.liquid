                    {% endif %}
                    <div {% if section.settings.collect_layout == '1' %} class="col-md-9 col-lg-9 col-sm-12 col-xs-12 paira-gap-3 text-center"{% endif %}{% if section.settings.collect_layout == '2' %} class="col-md-9 col-lg-9 col-sm-12 col-xs-12 paira-gap-3 text-center"{% endif %}{% if section.settings.collect_layout == '3' %}class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paira-gap-3 text-center full-width-collection"{% endif %}>
                    <div class="paira-collection-content collection-content">
