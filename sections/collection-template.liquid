                            <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="price">
                                <h2 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion5" href="#price_1" aria-expanded="true" aria-controls="price_1">
                                        {{ section.settings.shop_by_price_title }}
                                    </a>
                                </h2>
                            </div>
                            <div id="price_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="price">
                                <div class="panel-body">
                                    <ul class="list-inline margin-clear">
                                        {% assign tags = section.settings.shop_by_price | split: ',' %}
                                        {% for t in tags %}
                                        {% assign tag = t | strip %}
                                        {% if current_tags contains tag %}
                                        <label><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"> {{ tag }}</label>
                                        {% elsif collection.all_tags contains tag %}
                                        <label><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"> {{ tag }}</label>
                                        {% elsif collection.handle == 'all' %}
                                        <label><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"> {{ tag }}</label>
                                        {% endif %}
