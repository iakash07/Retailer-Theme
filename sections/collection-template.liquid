                        {% if section.settings.shop_by_vendor_check %}
                        <div class="panel-group margin-clear" id="accordion7" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="vendor">
                                <h2 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion7" href="#vendor_1" aria-expanded="true" aria-controls="vendor_1">
                                        {{ section.settings.shop_by_vendor_title }}
                                    </a>
                                </h2>
                            </div>
                            <div id="vendor_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="vendor">
                                <div class="panel-body">
                                    <ul class="list-inline margin-clear">
                                        {% assign tags = section.settings.shop_by_vendor | split: ',' %}
                                        {% for t in tags %}
                                        {% assign tag = t | strip %}
                                        {% if current_tags contains tag %}
                                        <label><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"> {{ tag }}</label>
                                        {% elsif collection.all_tags contains tag %}
                                        <label><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"> {{ tag }}</label>
                                        {% elsif collection.handle == 'all' %}
                                        <label><input type="checkbox" name="{{ tag | handle }}" id="{{ tag | handle }}" value="{{ tag | handle }}" class="paira-filter-checkbox"> {{ tag }}</label>
