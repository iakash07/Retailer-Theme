<style>
    {% if section.settings.product_row == '3' %}
    .grid-pro .product-con {
        width: 33.33%;
    }
    {% endif %}
    {% if section.settings.product_row == '4' %}
    .grid-pro .product-con {
        width: 25%;
    }
    {% endif %}
    {% if section.settings.product_row == '5' %}
    .grid-pro .product-con {
        width: 20%;
    }
    {% endif %}
    {% if section.settings.product_row == '6' %}
    .grid-pro .product-con {
        width: 16.66%;
    }
    {% endif %}
</style>
{% schema %}
{
"name": "Products Grid",
"class": "index-section index-section--collectionproductsection",
"settings": [
{
"type": "header",
"content": "Section Gap"
},
{
"type": "checkbox",
"id": "col_pro_section_gap_check",
"label": "Enable Section Gap",
"default": true
},
{
"type": "header",
"content": "Section Full Width"
},
{
"type": "checkbox",
"id": "col_pro_full_width_check",
"label": "Enable Section Full Width",
"default": false
},
{
"type": "header",
"content": "Collection Products Content"
},
{
"type": "text",
"id": "collection_products_title",
"label": "Collection Products Title",
"default": "New arrivals"
},
{
"type": "range",
"id": "collection_products_limit",
"label": "Collection Products Limit",
"min": 3,
"max": 36,
"default": 4
},
{
"type": "select",
"id": "product_row",
"label": "Product Per Row",
"options": [
{
"value": "3",
"label": "3"
},
{
"value": "4",
"label": "4"
},
{
"value": "5",
"label": "5"
},
{
"value": "6",
"label": "6"
}
],
"default": "4"
},
{
"type": "collection",
"id": "top_sellers",
"label": "Select Collection For Products"
}
],
"presets": [
{
"name": "Products Grid",
"category": "Products"
}
]
}
{% endschema %}
