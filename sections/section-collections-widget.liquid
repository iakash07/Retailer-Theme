},
{
"type": "url",
"id": "small_banner_link_1",
"label": "Small banner link 1",
"default": "\/collections\/all"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Image 2",
"info": "Upload image : 585 x 355px recommended."
},
{
"type": "url",
"id": "small_banner_link_2",
"label": "Small banner link 2",
"default": "\/collections\/all"
},
{
"type": "header",
"content": "Collection List Style"
},
{
"type": "radio",
"id": "collection_style",
"label": "Select One Style",
"options": [
{
"value": "1",
"label": "Collection Style 1"
},
{
"value": "2",
"label": "Collection Style 2"
}
],
"default": "1"
},
{
"type": "header",
"content": "Collection List Content"
},
{
"type": "color",
"id": "back_collection",
"label": "Collection Text Background Overlay Color",
"default": "#fff"
},
{
"type": "color",
"id": "back_collection_text_color",
"label": "Collection Text Color",
"default": "#000"
},
{
"type": "color",
"id": "back_collection_h",
"label": "Collection Hover Background Overlay Color",
"default": "#F26522"
},
{
"type": "color",
"id": "back_collection_text_color_h",
"label": "Collection Hover Text Color",
"default": "#fff"
},
{
"type": "range",
"id": "home_collection_limit",
"label": "Select Collection List Limit",
"min": 3,
"max": 6,
"default": 3
},
{
"type": "select",
"id": "collect_from",
"label": "Collection Display From",
"options": [
{
"value": "1",
"label": "Collection Display From Admin Panel"
},
{
"value": "2",
"label": "Collection Display From Block"
}
],
"default": "1"
}
],
"blocks": [
{
"type": "featured_collection",
"name": "Collection",
"settings": [
{
"label": "Collection",
"id": "collection",
"type": "collection"
}
]
}
],
"presets": [
{
"name": "Collection List",
"category": "Collection List"
}
]
}
{% endschema %}