<div id="collectionsection--{{ section.id }}">
    <!--=================== Collection Widget ===================-->
    <section class="collection-list text-center {% if section.settings.collect_section_gap_check %} paira-gap-2 {% endif %}">
        <div class="container-fluid padding-fixed {% if section.settings.col_pro_full_width_check %} full-width {% endif %}">
            <div class="row {% if section.settings.col_pro_full_width_check %} full-width margin-clear{% endif %}">
                <div class="col-md-12 col-xs-12 col-sm-12 {% if section.settings.col_pro_full_width_check == blank %}padding-clear{% endif %}">
                    <div class="collection-container s13">
                        <div class="collection-wrapper">
                            {% if section.settings.collect_from == '1' %}
                            {% for collection in collections limit: section.settings.home_collection_limit %}
                            {% if section.settings.collection_style == '1' %}
                            {% if forloop.index == 2%}
                            <div class="col-xs-12 col-md-6 col-sm-6 margin-bottom-30 hidden-xs">
                                <div class="collection-tops-mage position-r overflow-h">
                                    <a href="{{section.settings.small_banner_link_1}}" class="pull-left margin-right-10 full-width">
                                        {% if section.settings.image == blank %}
                                        {{ 'lifestyle-1' | append: current | placeholder_svg_tag: 'placeholder-svg height-300 full-width' }}
                                        {% else %}
                                        <img src="{{ section.settings.image | img_url: 'master' }}" class="img-responsive banner-images">
                                        {% endif %}
                                    </a>
                                </div>
                            </div>
                            {% endif %}
                            {% if forloop.index == 5 %}
                            <div class="col-xs-12 col-md-6 col-sm-6 margin-bottom-30 margin-top-30 hidden-xs">
                                <div class="collection-tops-mage position-r overflow-h">
                                    <a href="{{section.settings.small_banner_link_2}}" class="pull-left margin-right-10 full-width">
                                        {% if section.settings.image_2 == blank %}
                                        {{ 'lifestyle-1' | append: current | placeholder_svg_tag: 'placeholder-svg height-300 full-width' }}
                                        {% else %}
                                        <img src="{{ section.settings.image_2 | img_url: 'master' }}" class="img-responsive banner-images">
                                        {% endif %}
                                    </a>
                                </div>
                            </div>
                            {% endif %}
                            {% endif %}
                            <div class="col-xs-6 collectioner {% if section.settings.collection_style == '1' %} {% cycle 'col-lg-6 col-md-6 col-sm-6', 'col-lg-3 col-md-3 col-sm-3', 'col-lg-3 col-md-3 col-sm-3',' col-lg-6 col-md-6 col-sm-6 margin-top-30', 'col-lg-3 col-md-3 col-sm-3', 'col-lg-3 col-md-3 col-sm-3' %}{% else %} col-lg-4 col-md-4 col-sm-4 {% cycle '', '', '','margin-top-30', 'margin-top-30', 'margin-top-30' %}{% endif %}">
                                <div class="collection-item position-r">
                                    <a href="{{ collection.url }}" class="collec-im">
                                        {% if collection.image %}
                                        <img src="{{ collection.image.src | img_url: 'compact' }}" data-srcset="{% if collection.image %}{{ collection.image.src | img_url: 'compact' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %} 160w, {% if collection.image %}{{ collection.image.src | img_url: 'medium' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %} 240w, {% if collection.image %}{{ collection.image.src | img_url: 'grande' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %} 500w" data-src="{% if collection.image %}{{ collection.image.src | img_url: 'grande' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %}" alt="{{ collection.title }}" data-sizes="auto" class="lazyload blur-up img-responsive">
                                        {% else %}
                                        {{ 'collection-1' | append: current | placeholder_svg_tag: 'placeholder-svg placeholder-svgs height-338 ' }}
                                        {% endif %}
                                    </a>
                                    <div class="display-collection">
                                        <a href="{{ collection.url }}" class="back-link"></a>
                                        <div class="collect-over" {% if collection.image == blank %}style="margin-top: 30%"{% endif %}>
                                            <h4 class="margin-clear">
                                                <a href="{{ collection.url }}">{{ collection.title }}</a>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                            {% else %}
                            {% for block in section.blocks %}
                            {%- assign collection = collections[block.settings.collection] -%}
                            {% if section.settings.collection_style == '1' %}
                            {% if forloop.index == 2%}
                            <div class="col-xs-12 col-md-6 col-sm-6 margin-bottom-30 hidden-xs">
                                <div class="collection-tops-mage position-r overflow-h">
                                    <a href="{{section.settings.small_banner_link_1}}" class="pull-left margin-right-10 full-width">
                                        {% if section.settings.image == blank %}
                                        {{ 'lifestyle-1' | append: current | placeholder_svg_tag: 'placeholder-svg height-300 full-width' }}
                                        {% else %}
                                        <img src="{{ section.settings.image | img_url: 'master' }}" class="img-responsive banner-images">
                                        {% endif %}
                                    </a>
                                </div>
                            </div>
                            {% endif %}
                            {% if forloop.index == 5 %}
                            <div class="col-xs-12 col-md-6 col-sm-6 margin-bottom-30 margin-top-30 hidden-xs">
                                <div class="collection-tops-mage position-r overflow-h">
                                    <a href="{{section.settings.small_banner_link_2}}" class="pull-left margin-right-10 full-width">
                                        {% if section.settings.image_2 == blank %}
                                        {{ 'lifestyle-1' | append: current | placeholder_svg_tag: 'placeholder-svg height-300 full-width' }}
                                        {% else %}
                                        <img src="{{ section.settings.image_2 | img_url: 'master' }}" class="img-responsive banner-images">
                                        {% endif %}
                                    </a>
                                </div>
                            </div>
                            {% endif %}
                            {% endif %}
                            <div class="col-xs-6 collectioner {% if section.settings.collection_style == '1' %} {% cycle 'col-lg-6 col-md-6 col-sm-6', 'col-lg-3 col-md-3 col-sm-3', 'col-lg-3 col-md-3 col-sm-3',' col-lg-6 col-md-6 col-sm-6 margin-top-30', 'col-lg-3 col-md-3 col-sm-3', 'col-lg-3 col-md-3 col-sm-3' %}{% else %} col-lg-4 col-md-4 col-sm-4 {% cycle '', '', '','margin-top-30', 'margin-top-30', 'margin-top-30' %}{% endif %}">
                                <div class="collection-item position-r">
                                    <a href="{{ collection.url }}" class="collec-im">
                                        {% if collection.image %}
                                        <img src="{{ collection.image.src | img_url: 'compact' }}" data-srcset="{% if collection.image %}{{ collection.image.src | img_url: 'compact' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %} 160w, {% if collection.image %}{{ collection.image.src | img_url: 'medium' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %} 240w, {% if collection.image %}{{ collection.image.src | img_url: 'grande' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %} 500w" data-src="{% if collection.image %}{{ collection.image.src | img_url: 'grande' }}{% else %}{{ 'empty-collection.jpg' | asset_url }}{% endif %}" alt="{{ collection.title }}" data-sizes="auto" class="lazyload blur-up img-responsive">
                                        {% else %}
                                        {{ 'collection-1' | append: current | placeholder_svg_tag: 'placeholder-svg placeholder-svgs height-338 ' }}
                                        {% endif %}
                                    </a>
                                    <div class="display-collection">
                                        <a href="{{ collection.url }}" class="back-link"></a>
                                        <div class="collect-over">
                                            <h4 class="margin-clear">
                                                <a href="{{ collection.url }}">{{ collection.title }}</a>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                                {% if section.blocks == blank %}
                                <div class="collection-item position-r">
                                    <a href="#" class="collec-im">
                                        {{ 'lifestyle-2' | append: current | placeholder_svg_tag: 'placeholder-svg position-absolute' }}
                                    </a>
                                    <div class="display-table-collection">
                                        <h4 class="collect-over margin-clear" style="margin-top: 30%">
                                            <a href="#">Hot Collections</a>
                                        </h4>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                            {% endfor %}
                            {% endif %}
                        </div>
                        <div class="text-center hidden-sm hidden-lg hidden-md another-btn">
                            <div class="swiper-button-prev swiper-button-prev-13--{{ section.id }}"><i class="fa fa-angle-left"></i></div>
                            <div class="swiper-button-next swiper-button-next-13--{{ section.id }}"><i class="fa fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    $(function() {
        var windowsize = $(window).width();
        if (windowsize <= 767) {
            $('.collection-container').addClass("swiper-container s13");
            $('.collection-wrapper').addClass("swiper-wrapper");
            $('.collection-wrapper .collectioner').addClass("swiper-slide");
            var swiper = new Swiper('.swiper-container.s13', {
                navigation: {
                    nextEl: '.swiper-button-next-13--{{ section.id }}',
                    prevEl: '.swiper-button-prev-13--{{ section.id }}'
                },
                slidesPerView: 2,
                spaceBetween: 15,
                freeMode: true,
                scrollbar: {
                    el: '.swiper-scrollbar',
                    hide: true
                },
                breakpoints: {
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 30
                    }
                }
            });
        }
    });
</script>
<style>
    #collectionsection--{{ section.id }} .collect-over {
    background: {{ section.settings.back_collection | color_modify: 'alpha', 0.9 }};
    }
    #collectionsection--{{ section.id }} .collection-text .overlay {
    background: {{ section.settings.back_collection | color_modify: 'alpha', 0.9 }};
    }
    #collectionsection--{{ section.id }} .collection-text h1, #collectionsection--{{ section.id }} .collection-text p, #collectionsection--{{ section.id }} .collect-over a, .collect-over h5{
    color: {{ section.settings.back_collection_text_color }};
    }
    #collectionsection--{{ section.id }} .collection-item:hover .collect-over {
    background: {{ section.settings.back_collection_h | color_modify: 'alpha', 0.9 }};
    }
    #collectionsection--{{ section.id }} .collection-item:hover .collect-over a, #collectionsection--{{ section.id }} .collection-item:hover .collect-over h5{
    color: {{ section.settings.back_collection_text_color_h }};
    }
    #collectionsection--{{ section.id }} .collection-item .back-link {
      background: transparent;
    }
</style>
{% schema %}
{
"name": "Collection List",
"class": "index-section index-section--collectionsection",
"max_blocks": 6,
"settings": [
{
"type": "header",
"content": "Section Gap"
},
{
"type": "checkbox",
"id": "collect_section_gap_check",
"label": "Enable Section Gap",
