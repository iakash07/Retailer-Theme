{% comment %}
<style>
    {% for block in section.blocks %}
    .ins-over-{{block.id}} .over ul {
    background: {{ block.settings.instagram_back | color_modify: 'alpha', 0.9 }};
    }
    .ins-over-{{block.id}}.ins-gallery:hover ul {
    background: {{ block.settings.instagram_back_h | color_modify: 'alpha', 0.9 }};
    }
    .ins-back h1, .back-instagram a, .insfed .ins-back .fa, .insfed .over, .insfed .over_1, .insfed ul li .mar-left, .over-1 a{
    color: {{ block.settings.instagram_back_text_color }};
    }
    .ins-over-{{block.id}} .over ul:hover .fa, .ins-over-{{block.id}}.ins-gallery:hover ul .mar-left{
    color: {{ block.settings.instagram_back_text_color_h }};
    }
    {% endfor %}
    .gallary-banner-{{ section.id }} .heading h1, .gallary-banner-{{ section.id }} .heading a {
    color: {{ section.settings.top_foo_text_colo }};
    }
    .gallary-banner-{{ section.id }} .heading a:hover{
    color: {{ section.settings.top_foo_text_colo_h }};
    }
</style>
{% endcomment %}
{% schema %}
{
"name": "Custom Image Gallery",
"max_blocks": 15,
"settings": [
{
"type": "header",
"content": "Section Gap"
},
{
"type": "checkbox",
"id": "section_gap_check",
"label": "Enable Section Gap",
"default": true
},
{
"type": "header",
"content": "Section Full Width"
},
{
"type": "checkbox",
"id": "ban_full_width_check",
"label": "Enable Section Full Width",
"default": false
},
{
"type": "header",
"content": "Gallery Content"
},
{
"type": "text",
"id": "home_gallery",
"label": "Gallery Title",
"default": "Home Gallery"
}
],
"blocks": [
{
"type": "image",
"name": "Banner Image",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info": "Upload image : 320 x 320px recommended."
},
{
"type": "text",
"id": "image_text_btn",
"label": "Link Text",
"default": "View Gallery"
},
{
"type": "url",
"id": "small_btn_link",
"label": "Small banner Button Link",
"default": "\/collections\/all"
},
{
"type": "header",
"content": "Gallery Colors"
},
{
"type": "color",
"id": "instagram_back",
"label": "Background Overlay Color",
"default": "#fff"
},
{
"type": "color",
"id": "instagram_back_text_color",
"label": "Text Color",
"default": "#000"
},
{
"type": "color",
"id": "instagram_back_h",
"label": "Background Overlay Hover Color",
"default": "#F26522"
},
{
"type": "color",
"id": "instagram_back_text_color_h",
"label": "Hover Text Color",
"default": "#fff"
}
]
}
],
"presets": [
{
"name": "Custom Image Gallery",
"category": "Instagram"
}
]
}
{% endschema %}
