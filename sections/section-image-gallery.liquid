                {% for block in section.blocks %}
                <div class="ins-gallery ins-over-{{block.id}} {% if section.settings.home_gallery != blank %} margin-top-30{% endif %}">
                    <div class="ins-over overflow-h">
                        {% if block.settings.image == blank %}
                        {{ 'image' | append: current | placeholder_svg_tag: 'placeholder-svg ins-img height-200' }}
                        {% else %}
                        <a href="{{ block.settings.small_btn_link }}"><img src="{{ block.settings.image | img_url: 'master' }}" class="img-responsive banner-images"></a>
                        {% endif %}
                        <div class="over">
                            <ul class="padding-clear">
                                <li style="width: 100%">
                                  {% if block.settings.image_text_btn != blank  %}  
                                    <a href="{{ block.settings.small_btn_link }}" class="mar-left" style="font-size: 14px;display: inline-block;width: 100%;padding: 10px;margin-left: 0 !important;"><span>{{ block.settings.image_text_btn }}</span></a>
