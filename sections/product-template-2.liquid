    function subTotal(quantity, price, subTotal) {
        var v = quantity,
                p = price,
                x = /([0-9]+[.|,][0-9]+[.|,][0-9]+)/g,
                q = p.match(x);
        if (!q){
            x = /([0-9]+[.|,][0-9]+)/g; q = p.match(x);
        }
        if(q){
            var b = Shopify.formatMoney(q[0].replace(/[.|,]/g,'') * parseInt(v)),
                    s = p.replace(new RegExp(q[0], "g") ,b.match(x)[0]);
