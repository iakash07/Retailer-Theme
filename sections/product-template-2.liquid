                'fotorama:showend ' +
                'fotorama:load ' +
                'fotorama:error ' +
                'fotorama:startautoplay ' +
                'fotorama:stopautoplay ' +
                'fotorama:fullscreenenter ' +
                'fotorama:fullscreenexit ' +
                'fotorama:loadvideo ' +
                'fotorama:unloadvideo',
